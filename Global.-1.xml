<Defaults>
    <TableLayout cellBackgroundColor='clear' />

    <Image class="role" width="190" height="190" />
    <VerticalLayout class="playerRole" width="600" height="1000"/>


    <Panel class='readyPanel' width='300' height='100' />
    <ToggleButton class='ready' color='Red' textAlignment='MiddleCenter' width='300' height='100' onValueChanged='ready' text='Ready' />
    <Panel class='cardPanel' height='418.5' width='300' />
    <Image class='card' height='418.5' width='300' />
    <Text class='description' color='white' fontSize='25' />

    <Panel class='timer' width='250' height='150' rectAlignment='UpperLeft' offsetXY='75 -10' allowDragging='true' returnToOriginalPositionWhenReleased='false' />
    <Text class='time' fontSize='100' />

    <Panel class='voteSwitch' width='8%' height='75' rectAlignment='UpperRight' offsetXY='-250 -25' allowDragging='true' returnToOriginalPositionWhenReleased='false' />
    <Button class='voteSwitchButton' fontSize='25' onClick='voteToggle' text='Player Voter' />

    <GridLayout class='voting' width='800' height='900' cellSize='400 150' />
    <Text class='votingText' alignment='MiddleLeft' color='Blue' fontStyle='Bold' fontSize='30' text='Choose a player to vote out:' />

    <GridLayout class='claimSelector' width='800' height='800' cellSize='200 200' />


    <GridLayout class='PlayerSelector' width='800' height='900' cellSize='400 150' />
    <Text class='PlayerSelectorInstructions' alignment='MiddleLeft' color='Blue' fontStyle='Bold' fontSize='30' />
    <Image class='PlayerSelectorSentinel' height='50' width='50' rectAlignment='LowerRight' image='Sentinel Token' />
    <Text class='PlayerSelectorColor' color='Black' fontSize='25' />

    <TableLayout class='CenterCards' width='900' height='500' columnWidths='300' rectAlignment='MiddleCenter' />
    <Text class='CenterCardsInstructions' alignement='MiddleLeft' color='Black' fontStyle='Bold' fontSize='30' />
    <Image class='CenterCardsMiddleCard4' height='400' width='300' rotation='0 0 90' image='Back' onClick='playerNightClick(4)' />

    <GridLayout class='PlayerList' width='800' height='750' cellSize='800 150' />
    <Text class='PlayerListInstructions' alignment='MiddleLeft' color='Black' fontStyle='Bold' fontSize='30' />
    <Panel class='PlayerListColorPanel' width='400' height='150' />
    <Text class='PlayerListColorText' color='Black' fontSize='25' />
    <Panel class='PlayerListExtra' width='400' height='150' color='White' />
    <Text class='PlayerListExtraText' color='Black' fontSize='25' />

    <TableLayout class='PlayerShow' columnWidths='500' width='500' height='700' />
    <Text class='PlayerShowInstructions' alignment='MiddleLeft' color='Blue' fontStyle='Bold' fontSize='30' />
    <Image class='PlayerShowCard' image='Back' width='300' height='400' />
    <Panel class='PlayerShowButton' color='Green' width='300' height='100' onClick='playerNightClick(continue)' />
    <Text class='PlayerShowButtonText' color='Black' fontSize='25' text='Continue' />
</Defaults>

<!-- Start Button -->
<Panel id="startButton" width="250" height="150" rectAlignment="UpperLeft" offsetXY="75 -10" allowDragging="true" returnToOriginalPositionWhenReleased="false" visibility='Admin'>
    <Button color="#FFFFFF" fontSize="100" onClick="start">Start</Button>
</Panel>

<!-- Role Selector -->
<Panel id="roleSelectorSwitch" width="50%" height="75" rectAlignment="UpperCenter" offsetXY="0 -75" allowDragging="true" returnToOriginalPositionWhenReleased="false">
    <Button fontSize="25" onClick="roleSelectToggle">Role Selector</Button>
</Panel>
<VerticalScrollView width="800" height="600" id="roleSelector" noScrollbars="true" scrollSensitivity="20" visibility=" ">
    <Text>RoleSelector!</Text>
</VerticalScrollView>

<!-- Claim Switch -->
<Panel id ='claimSwitch' width='8%' height='300' rectAlignment='MiddleRight' allowDragging='true' returnToOriginalPositionWhenReleased='false' active='false' offsetXY='0 100'>
    <Button fontSize='50' onClick='claimToggle'>Make a claim</Button>
</Panel>

<!-- Code for Debugger -->
<Panel id='debuggerSwitch' width='300' height='100' rectAlignment='UpperRight' allowDragging='true' returnToOriginalPositionWhenReleased='false' active='false' visibility='Host'>
    <Button fontSize='50' onClick='openDebug'>Debugger</Button>
</Panel>

<GridLayout id='debugger' width='500' height='500' rectAlignment='MiddleCenter' allowDragging='true' returnToOriginalPositionWhenReleased='false' cellSize='500 100' visibility=' '>
    <Panel><Button fontSize='50' onClick='forceReady()'>Force Ready</Button></Panel>
    <Panel><Button fontSize='50' onClick='skipTimer()'>Skip Timer</Button></Panel>
    <Panel><Button fontSize='50' onClick='pauseGame()'>Pause</Button></Panel>
    <Panel><Button fontSize='50' onClick='updateUI()'>Update UI</Button></Panel>
    <Panel><Button fontSize='50' onClick='forceVote()'>Force Vote</Button></Panel>
</GridLayout>

<GridLayout id='forceVote' width='800' height='900' cellSize='400 150' visibility=' '>
    <Text>ForceVote!</Text>
</GridLayout>
